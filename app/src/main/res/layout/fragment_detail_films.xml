<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inflated_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_label" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_title_label"
        android:layout_toEndOf="@id/tv_title_label"
        android:layout_toRightOf="@id/tv_title_label"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/tv_episode_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_label"
        android:text="@string/episode_id_label" />

    <TextView
        android:id="@+id/tv_episode_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_episode_id_label"
        android:layout_toEndOf="@id/tv_episode_id_label"
        android:layout_toRightOf="@id/tv_episode_id_label"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/tv_director_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_episode_id_label"
        android:text="@string/director_label" />

    <TextView
        android:id="@+id/tv_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_director_label"
        android:layout_toEndOf="@id/tv_director_label"
        android:layout_toRightOf="@id/tv_director_label"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/tv_producer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_director_label"
        android:text="@string/producer_label" />

    <TextView
        android:id="@+id/tv_producer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_producer_label"
        android:layout_toEndOf="@id/tv_producer_label"
        android:layout_toRightOf="@id/tv_producer_label"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/tv_release_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_producer"
        android:text="@string/release_date_label" />

    <TextView
        android:id="@+id/tv_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_release_date_label"
        android:layout_toEndOf="@id/tv_release_date_label"
        android:layout_toRightOf="@id/tv_release_date_label"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/tv_species_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_release_date_label"
        android:text="@string/species_label" />

    <LinearLayout
        android:id="@+id/ll_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_species_label"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/tv_starships_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_species_label"
        android:layout_alignStart="@id/tv_species_label"
        android:layout_below="@id/ll_species"
        android:text="@string/starships_label" />

    <LinearLayout
        android:id="@+id/ll_starships"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ll_species"
        android:layout_alignStart="@id/ll_species"
        android:layout_below="@id/tv_starships_label"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/tv_vehicles_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_species_label"
        android:layout_alignStart="@id/tv_species_label"
        android:layout_below="@id/ll_starships"
        android:text="@string/vehicles_label" />

    <LinearLayout
        android:id="@+id/ll_vehicles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ll_species"
        android:layout_alignStart="@id/ll_species"
        android:layout_below="@id/tv_vehicles_label"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/tv_characters_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_species_label"
        android:layout_alignStart="@id/tv_species_label"
        android:layout_below="@id/ll_vehicles"
        android:text="@string/characters_label" />

    <LinearLayout
        android:id="@+id/ll_characters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ll_species"
        android:layout_alignStart="@id/ll_species"
        android:layout_below="@id/tv_characters_label"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/tv_planets_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_species_label"
        android:layout_alignStart="@id/tv_species_label"
        android:layout_below="@id/ll_characters"
        android:text="@string/planets_label" />

    <LinearLayout
        android:id="@+id/ll_planets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ll_species"
        android:layout_alignStart="@id/ll_species"
        android:layout_below="@id/tv_planets_label"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/tv_opening_crawl_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_planets"
        android:text="@string/opening_crawl_label"/>

    <TextView
        android:id="@+id/tv_opening_crawl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ll_species"
        android:layout_alignStart="@id/ll_species"
        android:layout_below="@id/tv_opening_crawl_label"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>